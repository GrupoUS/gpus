# Frontend Environment Variables
VITE_CONVEX_URL=https://your-deployment.convex.cloud
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Backend Environment Variables
CONVEX_DEPLOYMENT=dev:your-deployment-name

# LGPD Compliance Variables (CRITICAL)
# Generate a secure random key with at least 32 characters
# Command: openssl rand -hex 32
ENCRYPTION_KEY=your-32-character-encryption-key

# Security Variables
CORS_ORIGINS=http://localhost:5173,https://yourdomain.com
RATE_LIMIT_WINDOW_MS=3600000
MAX_REQUEST_SIZE_MB=10

# Database and Storage
DATABASE_URL=your-database-url
STORAGE_URL=your-storage-url

# External Services
CLERK_SECRET_KEY=sk_test_your-secret-key
CLERK_JWT_ISSUER_DOMAIN=https://your-instance.clerk.accounts.dev

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# Development
NODE_ENV=development
VITE_DEV_MODE=true

# Payment Gateway (Asaas)
ASAAS_API_KEY=your-asaas-api-key
ASAAS_BASE_URL=https://api.asaas.com/v3
ASAAS_ENVIRONMENT=production # ou sandbox

# WhatsApp Integration (Evolution API)
EVOLUTION_API_URL=https://your-evolution-instance.com
EVOLUTION_API_KEY=your-evolution-api-key
EVOLUTION_INSTANCE_NAME=your-instance-name

# AI Assistant (Dify)
DIFY_API_URL=https://api.dify.ai/v1
DIFY_API_KEY=app-your-dify-api-key
DIFY_APP_ID=your-app-id
