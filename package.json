{
	"name": "gpus-monorepo",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"lint": "turbo run lint",
		"lint:check": "turbo run lint:check",
		"typecheck": "turbo run typecheck",
		"test": "turbo run test",
		"db:generate": "cd packages/shared && drizzle-kit generate",
		"db:push": "cd packages/shared && drizzle-kit push",
		"db:studio": "cd packages/shared && drizzle-kit studio"
	},
	"devDependencies": {
		"@repo/config": "workspace:*",
		"turbo": "^2.0.0",
		"typescript": "^5.9.3"
	},
	"packageManager": "bun@1.1.8"
}
