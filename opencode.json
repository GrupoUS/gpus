{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "AGENTS.md",
    ".cursor/rules/*.mdc",
    ".opencode/agent/*.md",
    ".opencode/command/*.md"
  ],
  "mcp": {
    "serena": {
      "type": "local",
      "command": ["uvx", "--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server"],
      "enabled": true
    },
    "MCP_DOCKER": {
      "type": "local",
      "command": ["docker", "mcp", "gateway", "run"],
      "enabled": true
    }
  },
  "agent": {
    "apex-dev": {
      "tools": {
        "serena_*": true,
        "context7_*": true,
        "sequentialthinking_*": true,
        "gh_grep_*": true,
        "fetch_*": true
      }
    },
    "apex-researcher": {
      "tools": {
        "context7_*": true,
        "sequentialthinking_*": true,
        "serena_*": true,
        "gh_grep_*": true,
        "fetch_*": true
      }
    },
    "code-reviewer": {
      "tools": {
        "serena_*": true,
        "sequentialthinking_*": true,
        "gh_grep_*": true,
        "context7_*": true
      }
    },
    "database-specialist": {
      "tools": {
        "serena_*": true,
        "gh_grep_*": true,
        "context7_*": true
      }
    },
    "apex-ui-ux-designer": {
      "tools": {
        "serena_*": true,
        "gh_grep_*": true,
        "context7_*": true
      }
    }
  }
}
