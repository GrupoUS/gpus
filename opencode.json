{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "AGENTS.md",
    ".cursor/rules/*.mdc",
    ".opencode/agent/*.md",
    ".opencode/command/*.md"
  ],
  "mcp": {
    "serena": {
      "type": "local",
      "command": ["uvx", "--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server"],
      "enabled": true
    },
    "MCP_DOCKER": {
      "type": "local",
      "command": ["docker", "mcp", "gateway", "run"],
      "enabled": true
    }
  },
  "agent": {
    "build": {
          "mode": "primary",
          "model": "openai/gpt-5.2-xhigh",
          "prompt": "{file:.opencode/prompts/build.txt}"
        },
        "plan": {
          "mode": "primary",
          "model": "github-copilot/claude-opus-4.5",
          "prompt": "{file:.opencode/prompts/plan.txt}"
    },
    "apex-dev": {
      "tools": {
        "serena_*": true,
        "context7_*": true,
        "sequentialthinking_*": true,
        "fetch_*": true
      }
    },
    "apex-researcher": {
      "tools": {
        "context7_*": true,
        "sequentialthinking_*": true,
        "serena_*": true,
        "fetch_*": true,
        "tavily_*": true
      }
    },
    "code-reviewer": {
      "tools": {
        "serena_*": true,
        "sequentialthinking_*": true,
        "context7_*": true
      }
    },
    "database-specialist": {
      "tools": {
        "serena_*": true,
        "context7_*": true,
        "sequentialthinking_*": true
      }
    },
    "apex-ui-ux-designer": {
      "tools": {
        "serena_*": true,
        "sequentialthinking_*": true,
        "context7_*": true,
        "tavily_*": true,
        "fetch_*": true
      }
    }
  }
}
