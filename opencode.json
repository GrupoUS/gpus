{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "AGENTS.md",
    ".cursor/rules/*.mdc"
  ],
  "mcp": {
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "serena": {
      "type": "local",
      "command": ["uvx", "--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server"],
      "enabled": true
    },
    "docker": {
      "type": "local",
      "command": ["uvx", "mcp-server-docker"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "sequentialthinking": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/sequentialthinking"],
      "enabled": true
    },
    "fetch": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "mcp/fetch"],
      "enabled": true
    }
  },
  "agent": {
    "apex-dev": {
      "tools": {
        "serena_*": true,
        "gh_grep_*": true,
        "context7_*": true,
        "fetch_*": true
      }
    },
    "apex-researcher": {
      "tools": {
        "context7_*": true,
        "sequentialthinking_*": true,
        "serena_*": true,
        "gh_grep_*": true,
        "fetch_*": true
      }
    },
    "code-reviewer": {
      "tools": {
        "serena_*": true,
        "gh_grep_*": true,
        "context7_*": true
      }
    },
    "database-specialist": {
      "tools": {
        "serena_*": true,
        "gh_grep_*": true,
        "context7_*": true
      }
    },
    "apex-ui-ux-designer": {
      "tools": {
        "serena_*": true,
        "gh_grep_*": true,
        "context7_*": true
      }
    }
  }
}
