{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "skill": {
      "*": "allow"
    }
  },
  "instructions": [
    "AGENTS.md",
    ".cursor/rules/*.mdc",
    ".opencode/agent/*.md",
    ".opencode/command/*.md"
  ],
  "mcp": {
    "serena": {
      "type": "local",
      "command": ["uvx", "--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server", "--context", "ide", "--project-from-cwd", "--enable-web-dashboard", "false"],
      "enabled": true,
      "timeout": 60000
    },
    "sequentialthinking": {
      "type": "local",
      "command": ["bunx", "-y", "@modelcontextprotocol/server-sequential-thinking"],
      "enabled": true,
      "timeout": 30000
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  },
  "agent": {
    "build": {
          "mode": "primary",
          "model": "zhipuai-coding-plan/glm-4.7",
          "prompt": "{file:.opencode/prompts/build.txt}"
        },
        "plan": {
          "mode": "primary",
          "model": "zhipuai-coding-plan/glm-4.7",
          "prompt": "{file:.opencode/prompts/plan.txt}"
        }
  }
}
