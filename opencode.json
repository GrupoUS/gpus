{
	"$schema": "https://opencode.ai/config.json",
	"model": "google/claude-opus-4-5-thinking-high",
	"permission": {
		"skill": {
			"*": "allow"
		}
	},
	"instructions": [
		"AGENTS.md",
		".claude/agents/*.md",
		".claude/command/*.md",
		".opencode/rules/*.md"
	],
	"mcp": {
		"serena": {
			"type": "local",
			"command": [
				"uvx",
				"--from",
				"git+https://github.com/oraios/serena",
				"serena",
				"start-mcp-server",
				"--context",
				"ide-assistant",
				"--project-from-cwd",
				"--enable-web-dashboard",
				"false"
			],
			"enabled": true,
			"timeout": 60000
		},
		"sequentialthinking": {
			"type": "local",
			"command": [
				"bunx",
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			],
			"enabled": true,
			"timeout": 30000
		},
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp",
			"enabled": true
		}
	},
	"agent": {
		"build": {
			"mode": "primary",
			"model": "zhipuai-coding-plan/glm-4.7",
			"prompt": "{file:.opencode/prompts/build.txt}"
		},
		"plan": {
			"mode": "primary",
			"model": "google/claude-opus-4-5-thinking-high",
			"prompt": "{file:.opencode/prompts/plan.txt}"
		}
	}
}
