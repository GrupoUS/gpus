{
  "json.schemas": [
    {
      "fileMatch": [".vscode/mcp.json"],
      "schema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "properties": {
          "servers": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "command": { "type": "string" },
                "args": { "type": "array", "items": { "type": "string" } },
                "env": { "type": "object", "additionalProperties": { "type": "string" } },
                "type": { "type": "string", "enum": ["stdio", "sse"] },
                "alwaysAllow": { "type": "array", "items": { "type": "string" } },
                "disabledTools": { "type": "array", "items": { "type": "string" } },
                "disabled": { "type": "boolean" },
                "fromGalleryId": { "type": "string" },
                "url": { "type": "string" }
              },
              "required": ["command"],
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    }
  ],
  "typescript.preferences.importModuleSpecifier": "relative",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit",
    "quickfix.biome": "explicit",
    "source.fixAll.oxlint": "explicit",
    "source.organizeImports.oxlint": "explicit"
  },
  "css.lint.unknownProperties": "ignore",
  "css.lint.unknownAtRules": "ignore",
  "tailwindCSS.experimental.classRegex": [["cn\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]],
  "tailwindCSS.validate": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.colorDecorators": true,
  "tailwindCSS.suggestions": true,
  "files.associations": {
    "*.css": "css"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "files.exclude": {
    "**/node_modules": true,
    "*/node_modules/*": true,
    "**/node_modules/**": true
  },
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
}
